@model PercoidCRUD.Models.UpdateInternModel;

@{
}

<link rel="stylesheet" href="~/css/addform.css" asp-append-version="true" />
<form method="post" action="Add" >
    <fieldset>
        <legend>Personal Information</legend>

        <label for="internID">ID:</label>
        <input type="text" class="form-control" asp-for="Id" readonly>

        <label for="first-name">First Name:</label>
        <input type="text" class="form-control" asp-for="Name">

        <label for="first-name">Address:</label>
        <input type="text" class="form-control" asp-for="Address">

        <label for="first-name">Joining Date:</label>
        <input type="date" class="form-control" asp-for="JoiningDate">

        <label for="first-name">Salary:</label>
        <input type="text" class="form-control" asp-for="Salary">

    </fieldset>

    <button type="submit" class="btn btn-primary" onclick="return confirmUpdate()">Update</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Intern" onclick="return confirmDelete()">Delete</button>
</form>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }

    function confirmUpdate() {
        return confirm('Date will be updated.Sure?');
    }
</script>