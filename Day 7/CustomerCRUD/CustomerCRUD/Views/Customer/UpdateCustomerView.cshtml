@model CustomerCRUD.Models.CustomerGoods



<h2> Add Customers</h2>
<form class="mt-5" method="post" >
    <div class="mb-3">
        <label class="form-label">Customer ID</label>
        <input type="text" class="form-control" asp-for="Cust.Cust_Id" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Cust.Name">
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Cust.Email">
    </div>

    <div class="mb-3">
        <label class="form-label">PhoneNumber</label>
        <input type="text" class="form-control" asp-for="Cust.PhoneNumber">
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Cust.Address">
    </div>

    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="Cust.DateofBirth">
    </div>

    <div class="mb-3">
        <label class="form-label">GoodsID</label>
        <input type="text" class="form-control" asp-for="Gds.GoodsID" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Purchased Goods</label>
        <input type="text" class="form-control" asp-for="Gds.goodsName">
    </div>


    <button type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Update">Submit</button>
</form>