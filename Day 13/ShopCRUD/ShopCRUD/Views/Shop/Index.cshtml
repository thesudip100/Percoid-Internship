@model IEnumerable<DataAccessLayer.Entity.Shop>

<h1>Users List</h1>

<p>
    <a asp-action="AddShop" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ShopName</th>
            <th>ShopAddress</th>
            <th>ShopCategory</th>
            <th>OpenTime</th>
            <th>CloseTime</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.ShopID</td>
                    <td>@user.ShopName</td>
                    <td>@user.ShopAddress</td>
                    <td>@user.ShopCategory</td>
                    <td>@user.OpenTime</td>
                    <td>@user.CloseTime</td>
                    <td>
                        <a asp-action="DetailsShop" asp-route-id="@user.ShopID">Details</a> |
                    <a asp-action="EditShop" asp-route-id="@user.ShopID">Edit</a> |
                    <a asp-action="DeleteShop" asp-route-id="@user.ShopID">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>